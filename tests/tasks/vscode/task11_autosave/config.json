{
    "task_id": "11",
    "task_name": "autosave_setting",
    "description": "在vscode中设置自动保存",

    "application_info": {
        "name": "vscode",
        "executable_path": "/usr/share/code/code",
        "args": ["--no-sandbox", "--user-data-dir=/root/vscode_user_data_dir/"]
    },

    "task_parameters": {
        "mode": "afterDelay",
        "delay": 500
    },

    "instruction_template": "在vscode中只将当前工作区的自动保存的模式设置为 ${mode}, 并且设置delay时延等于 ${delay}",

    "evaluation_setup": {
        "scripts": [
            { "role": "hook",    "path": "hooker.js" },
            { "role": "handler", "path": "handler.py" }
        ],
        "timeout": 120,
        "evaluator_type": "IpcInjector",
        "evaluate_on_completion": true
    },
    "total_key_steps": 1,
    "preconditions": {
        "vscode_running": true
    },
    "events": {
        "evaluate_on_completion": {
            "description": "在任务完成时检查设置是否成功",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "任务成功完成"
        }
    },
    "mcp_servers": [
        {
            "command": "mcp-proxy",
            "args": ["http://127.0.0.1:6010/sse"]
        }
    ],
    "context_data": [
        {
            "from": "tests/context_data/vscode/task11/user_data",
            "to": "/root/vscode_user_data_dir"
        },
        {
            "from": "tests/context_data/vscode/extensions",
            "to": "/root/.vscode/"
        },
        {
            "from": "tests/context_data/vscode/task11/C-Plus-Plus",
            "to": "/root/C-Plus-Plus"
        }
    ]
}