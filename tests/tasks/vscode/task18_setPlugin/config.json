{
    "task_id": "18",
    "task_name": "create_new_file",
    "description": "在vscode中安装插件, 并且进行设置",

    "application_info": {
        "name": "vscode",
        "executable_path": "/usr/share/code/code",
        "args": ["--no-sandbox", "--user-data-dir=/root/vscode_user_data_dir/"]
    },

    "task_parameters": {
        "plugin_name": "TODO Highlight",
        "instruction": "配置插件为大小写不敏感",
        "value": false
    },

    "instruction_template": "在vscode中安装名为 ${plugin_name} 插件, 并且 ${instruction}",

    "evaluation_setup": {
        "scripts": [
            { "role": "hook",    "path": "hooker.js" },
            { "role": "handler", "path": "handler.py" }
        ],
        "timeout": 120,
        "evaluator_type": "IpcInjector",
        "evaluate_on_completion": true
    },
    "total_key_steps": 2,
    "preconditions": {
        "vscode_running": true
    },
    "events": {
        "evaluate_on_completion": {
            "description": "在任务结束时检查任务是否完成",
            "is_key_step": true,
            "key_step_index": 2,
            "key_step_name": "任务成功完成"
        },
        "plugin_installed": {
            "description": "在任务结束时检查插件是否安装",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "插件成功安装"
        }
    },
    "mcp_servers": [
        {
            "command": "mcp-proxy",
            "args": ["http://127.0.0.1:6010/sse"]
        }
    ],
    "context_data": [
        {
            "from": "tests/context_data/vscode/user_data",
            "to": "/root/vscode_user_data_dir"
        },
        {
            "from": "tests/context_data/vscode/task18/extensions",
            "to": "/root/.vscode/"
        },
        {
            "from": "tests/context_data/vscode/C-Plus-Plus",
            "to": "/root/C-Plus-Plus"
        }
    ]
}
