{
    "task_id": "03",
    "task_name": "open_doc",
    "description": "在FreeCAD中打开已有文档",

    "application_info": {
        "name": "FreeCAD",
        "executable_path": "/usr/local/bin/FreeCAD",
        "args": []
    },

    "task_parameters": {
        "source_path": "/FreeCAD/",
        "filename": "task03.FCStd"
    },

    "instruction_template": "在FreeCAD应用中打开文档，文档名为${source_path}${filename},展示打开结果",

    "evaluation_setup": {
        "scripts": [
            { "role": "hook",    "path": "hooker.js" },
            { "role": "handler", "path": "handler.py" }
        ],
        "timeout": 120
    },
    "preconditions": {
        "FreeCAD_running": true
    },
    "events": {
        "script_initialized": {
            "description": "钩子脚本初始化",
            "is_key_step": false
        },
        "function_found": {
            "description": "找到打开文档函数",
            "is_key_step": false
        },
        "function_called": {
            "description": "打开文档函数被调用",
            "is_key_step": false
        },
        "function_key_word_detected": {
            "description": "检测到文档打开关键内容",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "成功打开了指定文档"
        },
        "error": {
            "description": "错误事件",
            "is_key_step": false
        },
        "hook_installed": {
            "description": "安装钩子成功",
            "is_key_step": false
        }
    },
    "mcp_servers": [
        {
            "command": "python3",
            "args": ["/home/agent/.local/share/FreeCAD/Mod/freecad_mcp/src/freecad_bridge.py"]
        }
    ]
}