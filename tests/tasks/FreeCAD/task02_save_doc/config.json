{
    "task_id": "02",
    "task_name": "save_doc",
    "description": "Save a document in FreeCAD",

    "application_info": {
        "name": "FreeCAD",
        "executable_path": "/usr/local/bin/FreeCAD",
        "args": []
    },

    "task_parameters": {
        "source_path": "/FreeCAD/",
        "filename": "task02.FCStd"
    },

    "instruction_template": "The application is already open. Create and save a document in FreeCAD application, the document name should be ${source_path}${filename}, show the save result",

    "evaluation_setup": {
        "scripts": [
            { "role": "hook",    "path": "hooker.js" },
            { "role": "handler", "path": "handler.py" }
        ],
        "timeout": 120
    },
    "preconditions": {
        "FreeCAD_running": true
    },
    "total_key_steps": 1,
    "events": {
        "script_initialized": {
            "description": "Hook script initialized",
            "is_key_step": false
        },
        "function_found": {
            "description": "Found document save function",
            "is_key_step": false
        },
        "function_called": {
            "description": "Document save function called",
            "is_key_step": false
        },
        "function_key_word_detected": {
            "description": "Detected document save key content",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "Successfully saved document"
        },
        "error": {
            "description": "Error event",
            "is_key_step": false
        }
    },
    "mcp_servers": [
        {
            "command": "python3",
            "args": ["/home/agent/.local/share/FreeCAD/Mod/freecad_mcp/src/freecad_bridge.py"]
        }
    ]
}