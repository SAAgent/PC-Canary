{
    "task_id": "01",
    "task_name": "new_doc",
    "description": "Create a new document in FreeCAD",

    "application_info": {
        "name": "FreeCAD",
        "executable_path": "/usr/local/bin/FreeCAD",
        "args": []
    },

    "task_parameters": {
    },

    "instruction_template": "The application is already open. Create a new document in FreeCAD application and show the result",

    "evaluation_setup": {
        "scripts": [
            { "role": "hook",    "path": "hooker.js" },
            { "role": "handler", "path": "handler.py" }
        ],
        "timeout": 120
    },
    "preconditions": {
        "FreeCAD_running": true
    },
    "total_key_steps": 1,
    "events": {
        "script_initialized": {
            "description": "Hook script initialized",
            "is_key_step": false
        },
        "function_found": {
            "description": "Found document creation function",
            "is_key_step": false
        },
        "function_called": {
            "description": "Document creation function was called",
            "is_key_step": false
        },
        "function_key_word_detected": {
            "description": "Detected document creation key content",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "Successfully created new document"
        },
        "error": {
            "description": "Error event",
            "is_key_step": false
        }
    },
    "mcp_servers": [
        {
            "command": "python3",
            "args": ["/home/agent/.local/share/FreeCAD/Mod/freecad_mcp/src/freecad_bridge.py"]
        }
    ]
}
