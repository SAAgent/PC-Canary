{
    "task_id": "09",
    "task_name": "create_todo",
    "description": "检查Joplin中是否创建了指定内容的待办事项",

    "application_info": {
        "name": "joplin",
        "executable_path": "/workspace/PC-Canary/apps/joplin/Joplin-3.3.12.AppImage",
        "args": [
