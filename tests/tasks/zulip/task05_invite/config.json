{
    "task_id": "05",
    "task_name": "invite",
    "description": "在zulip中向特定邮箱发送邀请",

    "application_info": {
        "name": "zulip",
        "executable_path": "/opt/Zulip/zulip",
        "args": ["--no-sandbox", "--user-data-dir=apps/zulip_user_data_dir"]
    },

    "task_parameters": {
        "email": "xxxyyy@example.com",
        "role": "guest"
    },

    "instruction_template": "在zulip中向邮箱为 ${email} 的用户发送组织邀请, 该用户加入组织的角色是 ${role}, 并且邀请永不过期",

    "evaluation_setup": {
        "scripts": [
            { "role": "hook",    "path": "hooker.py" },
            { "role": "handler", "path": "handler.py" }
        ],
        "timeout": 120,
        "evaluator_type": "StateInspector",
        "evaluate_on_completion": true
    },
    "total_key_steps": 3,
    "preconditions": {
        "zulip_running": true
    },
    "events": {
        "evaluate_on_completion": {
            "description": "在任务结束时检测任务是否成功",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "成功发送邀请信息"
        }
    },
    "mcp_servers": [
      {
        "command": "npx",
        "args": [
          "-y",
          "/root/mcpworld-testbed/zulip-mcp"
        ],
        "env": {
            "ZULIP_EMAIL": "jxq@bupt.edu.cn",
            "ZULIP_API_KEY": "fWH05zAZYx3eXXosGLZA1a6etVywEtnN",
            "ZULIP_URL": "https://mcpworld.zulipchat.com"
      }
      }
    ],
